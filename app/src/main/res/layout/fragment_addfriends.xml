<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAddFriendsInvLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invite"
        android:paddingLeft="10dp"
        android:background="@color/ics_blue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textIsSelectable="true" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etAddFriendsInvitee"
            android:hint="johndoe"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btnAddFriendsInvite"
            android:src="@drawable/ic_add_black_36dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvAddFriendsReqLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending Requests"
        android:paddingLeft="10dp"
        android:background="@color/ics_blue"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"/>

    <include
        layout="@layout/query_listview_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>