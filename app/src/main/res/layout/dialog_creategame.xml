<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvGameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#80000000"
        android:text="Mode" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rgGameMode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radio_casual"
        android:orientation="horizontal">
        <RadioButton android:id="@id/radio_casual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casual"/>
        <RadioButton android:id="@+id/radio_competitive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Competitive"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvGameCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#80000000"
        android:text="Category" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rgGameCategory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radio_indoors"
        android:orientation="horizontal">
        <RadioButton android:id="@id/radio_indoors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Indoors"/>
        <RadioButton android:id="@+id/radio_outdoors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Outdoors"/>
    </RadioGroup>

    <TextView
        android:id="@+id/tvWordType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#80000000"
        android:text="Word Type" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rgWordType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/radio_random"
        android:orientation="horizontal">
        <RadioButton android:id="@id/radio_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Random"/>
        <RadioButton android:id="@+id/radio_custom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custom"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#80000000"
        android:layout_marginTop="18dp"
        android:text="You have selected" />

    <TextView
        android:id="@+id/tvFriendCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="4dp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tvSearchItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#80000000"
        android:layout_marginTop="18dp"
        android:text="Search Item"
        android:visibility="gone" />

    <EditText
        android:id="@+id/etSearchItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>