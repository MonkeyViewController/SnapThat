<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="Base.Theme.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="InPictureTextViewBlack" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InPictureTextViewWhite" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:shadowColor">@android:color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:textAppearance"> @style/TextAppearance.AppCompat.Title</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
